<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/groupMaker">

    <fragment
        android:id="@+id/groupMaker"
        android:name="com.example.hackermatcher.GroupMaker"
        android:label="fragment_group_maker"
        tools:layout="@layout/fragment_group_maker" >
        <action
            android:id="@+id/action_groupMaker_to_settings"
            app:destination="@id/settings"
            app:popUpTo="@id/groupMaker" />
        <action
            android:id="@+id/action_groupMaker_to_groups"
            app:destination="@id/groups" />
    </fragment>
    <fragment
        android:id="@+id/groups"
        android:name="com.example.hackermatcher.Groups"
        android:label="fragment_groups"
        tools:layout="@layout/fragment_groups" >
        <action
            android:id="@+id/action_groups_to_settings"
            app:destination="@id/settings"
            app:popUpTo="@id/groups" />
        <action
            android:id="@+id/action_groups_to_users"
            app:destination="@id/users" />
        <action
            android:id="@+id/action_groups_to_groupMaker"
            app:destination="@id/groupMaker" />
    </fragment>
    <fragment
        android:id="@+id/dashboard"
        android:name="com.example.hackermatcher.Dashboard"
        android:label="fragment_login"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_dashboard_to_settings"
            app:destination="@id/settings" />
        <action
            android:id="@+id/action_dashboard_to_groupMaker"
            app:destination="@id/groupMaker" />
        <action
            android:id="@+id/action_dashboard_to_groups"
            app:destination="@id/groups" />
        <action
            android:id="@+id/action_dashboard_to_settings2"
            app:destination="@id/settings"
            app:popUpTo="@id/dashboard" />
        <action
            android:id="@+id/action_dashboard_to_users2"
            app:destination="@id/users" />
    </fragment>
    <fragment
        android:id="@+id/settings"
        android:name="com.example.hackermatcher.Settings"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/users"
        android:name="com.example.hackermatcher.Users"
        android:label="fragment_users"
        tools:layout="@layout/fragment_users" >
        <action
            android:id="@+id/action_users_to_settings"
            app:destination="@id/settings"
            app:popUpTo="@id/users" />
    </fragment>
</navigation>